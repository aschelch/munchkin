extends layout

block content

  .container

    .headline
      h1 
        =title
        small #{__("Tuez les monstres, trahissez vos amis ! Ou l'inverse.")}

    p 
      i 
        != __('<strong>Munchkin Web</strong> est un portage non-officiel du jeu de carte <a href="https://munchkin.game/">Munchkin</a> créé par <a href="http://www.sjgames.com/">Steve Jackson</a> et édité par <a href="http://www.edgeent.fr/jeux/collection/munchkin">Edge Entertainment</a> pour jouer en ligne avec vos amis pendant le confinement.')

    p.form-inline
      = __('Nom de votre personnage')
      | &nbsp;
      input(type="text", placeholder="username", id="username", class="form-control")

    
    p 
      button#new-public-game.btn.btn-primary(data-toggle="modal" data-target="#new-game-modal") 
        = __('Lancer une nouvelle partie') 
      | &nbsp;
      = __('ou rejoindre une partie :')

    #games
      table.table.table-striped
        thead
          tr
            th 
              = __("Nom de la partie")
            th 
              = __("Joueurs")
            th 
        tbody

    div(class="modal fade" id="new-game-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            button(type="button" class="close fui-cross" data-dismiss="modal" aria-hidden="true")
            h4.modal-title#myModalLabel #{__("Nouvelle partie")}
          .modal-body
            .form-group
              input(id="game-name" placeholder="#{__('Nom de la partie')}" class="form-control")
            .form-group
                label(class="control-label") #{__("Extensions")}
                label(class="checkbox" for="munchkin-addon-2")
                  input(type="checkbox" data-toggle="checkbox" value="" id="munchkin-addon-2" disabled="" required="" class="custom-checkbox")
                  span.icons
                    span.icon-unchecked
                    span.icon-checked
                  = __("Munchkin 2 - Hachement Mieux (bientôt disponbile)")
                label(class="checkbox" for="munchkin-addon-3")
                  input(type="checkbox" data-toggle="checkbox" value="" id="munchkin-addon-3" disabled="" required="" class="custom-checkbox")
                  span.icons
                    span.icon-unchecked
                    span.icon-checked
                  = __("Munchkin 3 - Clerc et (pas) net (bientôt disponbile)")
                label(class="checkbox" for="munchkin-addon-4")
                  input(type="checkbox" data-toggle="checkbox" value="" id="munchkin-addon-4" required="" class="custom-checkbox")
                  span.icons
                    span.icon-unchecked
                    span.icon-checked
                  = __("Munchkin 4 - Ton destin est sellé !")
                label(class="checkbox" for="munchkin-addon-5")
                  input(type="checkbox" data-toggle="checkbox" value="" id="munchkin-addon-5" disabled="" required="" class="custom-checkbox")
                  span.icons
                    span.icon-unchecked
                    span.icon-checked
                  = __("Munchkin 5 - On zeu rôde again (bientôt disponbile)")
                label(class="control-label") #{__("Paramètres")}
                label(class="checkbox" for="video-conf-enabled")
                  input(type="checkbox" data-toggle="checkbox" value="" id="video-conf-enabled" required="" checked="" class="custom-checkbox")
                  span.icons
                    span.icon-unchecked
                    span.icon-checked
                  = __("Activer la conférence vidéo")

          .modal-footer
            button(type="button" class="btn btn-default" data-dismiss="modal") #{__("Fermer")}
            button(type="button" class="btn btn-primary" id="create-public-game") #{__("Créer la partie")}


