extends layout

block content
  .container-fluid
    .row
      .col-9

        h6#title 
          | Partie #{game.name} 
          small (#{game.id})
        #players-boards
          .tabbable
            ul.nav.nav-tabs.nav-append-content
              li <a href="#tab4" class="active show">Popular</a>
            .tab-content
              div(class="tab-pane active show" id="tab4")
                p I'm in Section 1


        .roomzone
          h6 Le donjon
          p 
            button#open-door.btn.btn-primary Ouvrir la porte
            | 
            button#take-open-door.btn.btn-primary Prendre la carte
            | 
            span#door-card
          p  
            button#take-door-card.btn.btn-primary Piocher une carte <strong>Donjon</strong> 
            | 
            button#take-treasure-card.btn.btn-primary Piocher une carte <strong>Trésor</strong>   
            | 
            button#roll-dice.btn.btn-primary Lancer un dé 

        .boardzone
          h6 Votre équipement 
          ul#board.list-inline
          p.empty#board-empty Vous n'avez aucun équipement

        .handzone
          h6 Votre main
          ul#hand.list-inline
          p.empty#hand-empty Vous n'avez aucune carte en main

      .col-3
      
        #visio
          h6 Video conf
          video

        h6 Personnages
        ul#players.list-unstyled

        h6 Evènements
        ul#logs.list-unstyled